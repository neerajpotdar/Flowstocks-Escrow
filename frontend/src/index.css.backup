:root {
  /* Vibrant Color Palette */
  --bg-primary: #0a0118;
  --bg-secondary: #1a0b2e;
  --bg-card: rgba(26, 11, 46, 0.8);
  --bg-card-hover: rgba(46, 20, 80, 0.9);

  --text-primary: #ffffff;
  --text-secondary: #e0b3ff;
  --text-muted: #9d7bb8;

  /* Vibrant Neon Accents */
  --accent-primary: #ff006e;
  --accent-secondary: #8338ec;
  --accent-tertiary: #3a86ff;
  --accent-success: #06ffa5;
  --accent-warning: #ffbe0b;

  /* Gradient Combinations */
  --gradient-primary: linear-gradient(135deg, #ff006e 0%, #8338ec 50%, #3a86ff 100%);
  --gradient-secondary: linear-gradient(135deg, #06ffa5 0%, #3a86ff 100%);
  --gradient-danger: linear-gradient(135deg, #ff006e 0%, #ff4d00 100%);
  --gradient-glow: linear-gradient(135deg, #ff006e, #8338ec, #3a86ff, #06ffa5);

  --success: #06ffa5;
  --success-bg: rgba(6, 255, 165, 0.15);
  --danger: #ff006e;
  --danger-bg: rgba(255, 0, 110, 0.15);

  --border-color: rgba(255, 0, 110, 0.3);
  --border-glow: rgba(131, 56, 236, 0.5);
  --shadow-sm: 0 2px 8px rgba(255, 0, 110, 0.3);
  --shadow-md: 0 4px 16px rgba(131, 56, 236, 0.4);
  --shadow-lg: 0 8px 32px rgba(255, 0, 110, 0.5);
  --shadow-neon: 0 0 20px rgba(255, 0, 110, 0.6), 0 0 40px rgba(131, 56, 236, 0.4);

  /* Spacing */
  --spacing-xs: 0.5rem;
  --spacing-sm: 1rem;
  --spacing-md: 1.5rem;
  --spacing-lg: 2rem;
  --spacing-xl: 3rem;

  /* Border Radius */
  --radius-sm: 0.5rem;
  --radius-md: 1rem;
  --radius-lg: 1.5rem;

  /* Transitions */
  --transition-fast: 0.15s ease;
  --transition-normal: 0.3s ease;
  --transition-slow: 0.5s ease;

  /* Typography */
  --font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

}

::-webkit-scrollbar-track {
  background: var(--bg-secondary);
}

::-webkit-scrollbar-thumb {
  background: var(--accent-primary);
  border-radius: 5px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--accent-secondary);
}

/* App Container */
#root {
  min-height: 100vh;
}

align-items: center;
gap: var(--spacing-xs);
padding: var(--spacing-xs) var(--spacing-md);
background: var(--bg-card);
border: 1px solid var(--border-color);
border-radius: 2rem;
margin-top: var(--spacing-sm);
backdrop-filter: blur(10px);
}

.status-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  animation: pulse 2s infinite;
}

.status-dot.connected {
  background: var(--success);
}

.status-dot.disconnected {
  background: var(--danger);
  animation: none;
}

@keyframes pulse {

  0%,
  100% {
    opacity: 1;
  }

  50% {
    opacity: 0.5;
  }
}

/* Stock Selector */
.stock-selector {
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-xl);
  backdrop-filter: blur(10px);
  box-shadow: var(--shadow-md);
}

.stock-selector h2 {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: var(--spacing-md);
  color: var(--text-primary);
}

.stock-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--spacing-md);
}

.stock-option {
  background: var(--bg-secondary);
  border: 2px solid var(--border-color);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  cursor: pointer;
  transition: all var(--transition-normal);
  position: relative;
  overflow: hidden;
}

.stock-option::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--accent-gradient);
  opacity: 0;
  transition: opacity var(--transition-normal);
  z-index: 0;
}

.stock-option:hover::before {
  opacity: 0.1;
}

.stock-option:hover {
  border-color: var(--accent-primary);
  transform: translateY(-4px);
  box-shadow: var(--shadow-lg);
}

.stock-option.subscribed {
  border-color: var(--accent-primary);
  background: rgba(99, 102, 241, 0.1);
}

.stock-option-content {
  position: relative;
  z-index: 1;
}

.stock-option h3 {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--accent-primary);
  margin-bottom: var(--spacing-xs);
}

.stock-option p {
  color: var(--text-secondary);
  font-size: 0.875rem;
  margin-bottom: var(--spacing-sm);
}

.stock-option button {
  width: 100%;
  padding: var(--spacing-xs) var(--spacing-sm);
  border: none;
  border-radius: var(--radius-sm);
  font-weight: 600;
  font-size: 0.875rem;
  cursor: pointer;
  transition: all var(--transition-fast);
  font-family: var(--font-family);
}

.subscribe-btn {
  background: var(--accent-gradient);
  color: white;
}

.subscribe-btn:hover {
  transform: scale(1.05);
  box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);
}

.unsubscribe-btn {
  background: var(--danger-bg);
  color: var(--danger);
  border: 1px solid var(--danger);
}

.unsubscribe-btn:hover {
  background: var(--danger);
  color: white;
}

/* Dashboard */
.dashboard {
  margin-top: var(--spacing-xl);
}

.dashboard h2 {
  font-size: 1.75rem;
  font-weight: 700;
  margin-bottom: var(--spacing-lg);
  color: var(--text-primary);
}

.empty-state {
  text-align: center;
  padding: var(--spacing-xl);
  background: var(--bg-card);
  border: 2px dashed var(--border-color);
  border-radius: var(--radius-lg);
  backdrop-filter: blur(10px);
}

.empty-state p {
  color: var(--text-secondary);
  font-size: 1.125rem;
  margin-bottom: var(--spacing-sm);
}

.empty-state small {
  color: var(--text-muted);
}

.stocks-container {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: var(--spacing-lg);
}

/* Stock Card */
.stock-card {
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  backdrop-filter: blur(10px);
  box-shadow: var(--shadow-md);
  transition: all var(--transition-normal);
  position: relative;
  overflow: hidden;
}

.stock-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: var(--accent-gradient);
}

.stock-card:hover {
  transform: translateY(-8px);
  box-shadow: var(--shadow-lg);
  border-color: var(--accent-primary);
}

.stock-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--spacing-md);
}

.stock-info h3 {
  font-size: 1.75rem;
  font-weight: 700;
  color: var(--accent-primary);
  margin-bottom: 0.25rem;
}

.stock-info p {
  color: var(--text-secondary);
  font-size: 0.875rem;
}

.remove-btn {
  background: var(--danger-bg);
  color: var(--danger);
  border: 1px solid var(--danger);
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 600;
  cursor: pointer;
  transition: all var(--transition-fast);
  font-family: var(--font-family);
}

.remove-btn:hover {
  background: var(--danger);
  color: white;
  transform: scale(1.05);
}

.stock-price {
  margin: var(--spacing-md) 0;
}

.price {
  font-size: 2.5rem;
  font-weight: 800;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.price-change {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  font-size: 1rem;
  font-weight: 600;
}

.price-change.positive {
  color: var(--success);
}

.price-change.negative {
  color: var(--danger);
}

.arrow {
  font-size: 1.25rem;
  animation: bounce 1s infinite;
}

@keyframes bounce {

  0%,
  100% {
    transform: translateY(0);
  }

  50% {
    transform: translateY(-4px);
  }
}

.change-badge {
  display: inline-block;
  padding: 0.25rem 0.75rem;
  border-radius: 1rem;
  font-size: 0.875rem;
  font-weight: 600;
  margin-left: var(--spacing-xs);
}

.change-badge.positive {
  background: var(--success-bg);
  color: var(--success);
}

.change-badge.negative {
  background: var(--danger-bg);
  color: var(--danger);
}

/* Loading State */
.loading {
  text-align: center;
  padding: var(--spacing-xl);
  color: var(--text-secondary);
}

.spinner {
  width: 50px;
  height: 50px;
  border: 4px solid var(--border-color);
  border-top-color: var(--accent-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto var(--spacing-md);
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* Responsive Design */
@media (max-width: 768px) {
  .header h1 {
    font-size: 2rem;
  }

  .header p {
    font-size: 1rem;
  }

  .stock-grid {
    grid-template-columns: 1fr;
  }

  .stocks-container {
    grid-template-columns: 1fr;
  }

  .app {
    padding: var(--spacing-md);
  }
}

/* Accessibility */
button:focus,
.stock-option:focus {
  outline: 2px solid var(--accent-primary);
  outline-offset: 2px;
}

/* Smooth Animations */
* {
  transition-property: background-color, border-color, color, fill, stroke, opacity, box-shadow, transform;
  transition-duration: var(--transition-normal);
  transition-timing-function: ease;
}

button,
.stock-option,
.stock-card {
  transition-property: all;
}